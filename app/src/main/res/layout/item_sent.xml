<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="120dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/sent_image"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/avtar"
            android:visibility="gone">


        </ImageView>

        <TextView
            android:id="@+id/sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sender"
            android:minWidth="80dp"
            android:minHeight="38dp"
            android:paddingStart="8dp"
            android:paddingEnd="15dp"
            android:paddingBottom="12dp"
            android:text="hi?"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>



    <TextView
        android:id="@+id/sent_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:00 PM"
        android:paddingEnd="5dp"
        android:textSize="11sp"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout2"
        app:layout_constraintEnd_toEndOf="@+id/layout2" />

    <TextView
        android:id="@+id/message_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>